		<pipeline nom="autoriser" inclure="ioauteurs_autorisations.php" />
		<pipeline nom="insert_head" inclure="ioauteurs_pipelines.php" />
		* declarer un pipeline
		<pipeline nom="mon_pipeline" action="" />
		* parents de menus de SPIP :
				menu_accueil (A eviter), menu_edition, menu_publication,
				menu_activite, menu_squelette, menu_administration, menu_configuration
		<menu nom="ioauteurs" titre="ioauteurs:ioauteurs_titre" parent="menu_edition"  icone="images/ioauteurs-16.png" />
		* parents d'onglets... configuration, plugins, statistiques, ...
		<onglet nom="ioauteurs" titre="ioauteurs:ioauteurs_titre" parent="configuration" icone="images/ioauteurs-24.png" />
	-->


	<pipeline nom="autoriser" inclure="ioauteurs_autorisations.php" />
	<pipeline nom="affiche_gauche" inclure="ioauteurs_pipelines.php" />

        <!-- Nouveau pipeline du plugin -->
        <pipeline nom="pre_import_auteur" action="" />

	<!-- On a besoin de bonux pour les fonctions CSV -->
